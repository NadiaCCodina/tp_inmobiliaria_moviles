<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.nadia.inmobiliariatp.ui.inicio.InicioFragment"
        android:label="Ubicacion"
        tools:layout="@layout/fragment_inicio" />

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.nadia.inmobiliariatp.ui.inmueble.InmueblesFragment"
        android:label="Inmuebles"
        tools:layout="@layout/fragment_inmuebles" >
        <action
            android:id="@+id/action_nav_gallery_to_detalleInmuebleFragment"
            app:destination="@id/detalleInmuebleFragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.nadia.inmobiliariatp.ui.perfil.PerfilFragment"
        android:label="Perfil"
        tools:layout="@layout/fragment_perfil" />
    <fragment
        android:id="@+id/nav_contratos"
        android:name="com.nadia.inmobiliariatp.ui.contratos.ContratosFragment"
        android:label="Contratos Vigentes"
        tools:layout="@layout/fragment_contratos" >
        <action
            android:id="@+id/action_nav_contratos_to_detalleContratoFragment"
            app:destination="@id/detalleContratoFragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_logout"
        android:name="com.nadia.inmobiliariatp.ui.logout.LogoutFragment"
        android:label="fragment_logout"
        tools:layout="@layout/fragment_logout" />
    <fragment
        android:id="@+id/crearInmuebleFragment"
        android:name="com.nadia.inmobiliariatp.ui.inmueble.CrearInmuebleFragment"
        android:label="fragment_crear_inmueble"
        tools:layout="@layout/fragment_crear_inmueble" />
    <activity
        android:id="@+id/mainActivity"
        android:name="com.nadia.inmobiliariatp.MainActivity"
        android:label="Inicio"
        tools:layout="@layout/fragment_inicio" />
    <fragment
        android:id="@+id/detalleInmuebleFragment"
        android:name="com.nadia.inmobiliariatp.ui.inmueble.DetalleInmuebleFragment"
        android:label="Detalle Inmueble" >
        <action
            android:id="@+id/action_detalleInmuebleFragment_to_nav_gallery2"
            app:destination="@id/nav_gallery" />
    </fragment>
    <fragment
        android:id="@+id/detalleContratoFragment"
        android:name="com.nadia.inmobiliariatp.ui.contratos.DetalleContratoFragment"
        android:label="Detalle Contrato" >

        <action
            android:id="@+id/action_detalleContratoFragment_to_fragment_inquilino"
            app:destination="@id/fragment_inquilino" />
        <action
            android:id="@+id/action_detalleContratoFragment_to_pagosFragment"
            app:destination="@id/pagosFragment" />
    </fragment>
    <fragment
        android:id="@+id/fragment_inquilino"
        android:name="com.nadia.inmobiliariatp.ui.inquilinos.InquilinoFragment"
        android:label="Inquilino" >
        <action
            android:id="@+id/action_fragment_inquilino_to_detalleContratoFragment"
            app:destination="@id/detalleContratoFragment" />
    </fragment>
    <fragment
        android:id="@+id/pagosFragment"
        android:name="com.nadia.inmobiliariatp.ui.pagos.PagosFragment"
        android:label="Pagos"
        tools:layout="@layout/fragment_pagos2" >
        <action
            android:id="@+id/action_pagosFragment_to_detalleContratoFragment"
            app:destination="@id/detalleContratoFragment" />
    </fragment>
</navigation>