<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.nadia.inmobiliariatp.ui.inicio.InicioFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_inicio" />

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.nadia.inmobiliariatp.ui.inmueble.InmueblesFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_inmuebles" >
        <action
            android:id="@+id/action_nav_gallery_to_detalleInmuebleFragment"
            app:destination="@id/detalleInmuebleFragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.nadia.inmobiliariatp.ui.perfil.PerfilFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_perfil" />
    <fragment
        android:id="@+id/nav_contratos"
        android:name="com.nadia.inmobiliariatp.ui.contratos.ContratosFragment"
        android:label="fragment_contratos"
        tools:layout="@layout/fragment_contratos" />
    <fragment
        android:id="@+id/nav_inquilinos"
        android:name="com.nadia.inmobiliariatp.ui.inquilinos.InquilinosFragment"
        android:label="fragment_inquilinos"
        tools:layout="@layout/fragment_inquilinos" />
    <fragment
        android:id="@+id/nav_logout"
        android:name="com.nadia.inmobiliariatp.ui.logout.LogoutFragment"
        android:label="fragment_logout"
        tools:layout="@layout/fragment_logout" />
    <fragment
        android:id="@+id/crearInmuebleFragment"
        android:name="com.nadia.inmobiliariatp.ui.inmueble.CrearInmuebleFragment"
        android:label="fragment_crear_inmueble"
        tools:layout="@layout/fragment_crear_inmueble" />
    <activity
        android:id="@+id/mainActivity"
        android:name="com.nadia.inmobiliariatp.MainActivity"
        android:label="fragment_inicio"
        tools:layout="@layout/fragment_inicio" />
    <fragment
        android:id="@+id/detalleInmuebleFragment"
        android:name="com.nadia.inmobiliariatp.ui.inmueble.DetalleInmuebleFragment"
        android:label="DetalleInmuebleFragment" >
        <action
            android:id="@+id/action_detalleInmuebleFragment_to_nav_gallery2"
            app:destination="@id/nav_gallery" />
    </fragment>
</navigation>